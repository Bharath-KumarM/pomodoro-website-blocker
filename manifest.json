{
  "name": "Be Focused - Website Screen Time & Blocker",
  "description": "Blocks distracting websites, sets time limits, and monitors your screen time",
  "version": "0.0.1",
  "manifest_version": 3,
  "permissions": ["storage", 
                  "tabs", 
                  "scripting", 
                  "notifications",
                  "alarms",
                  "webNavigation",
                  "contextMenus"
                ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "src/pages/background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/pages/popup/popup.html"
  },
  "options_page": "src/pages/popup/popup.html",
  "content_scripts": [
    {
        "matches": [
            "*://*/*"
        ],
        "js": [
          "src/pages/content/content.js"
        ]
    }
  ],
  "icons": {
    "16": "logo_3.png",
    "32": "logo_3.png",
    "48": "logo_3.png",
    "128": "logo_3.png"
  }

}


